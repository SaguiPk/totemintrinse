#:import utils kivy.utils
<HomePage>:
    MDFloatLayout:
        Label:
            text: "BEM-VINDO !"
            bold: True
            font_size: 80
            font_name: 'Gotham-Rounded-Medium'
            pos_hint: {"center_x": .5, "top": 0.73}
            size_hint: 0.1, 0.1

        MDButton:
            id: id_but_home
            style: "elevated"
            pos_hint: {"center_x": .5, "center_y": .45}
            theme_width: "Custom"
            height: "70dp"
            size_hint_x: .5
            radius: [11,]
            disabled: True
            on_release:
                app.mudar_tela('psicos')
                root.manager.transition.direction = "up"

            MDButtonText:
                text: "Confirme sua chegada"
                pos_hint: {"center_x": .5, "center_y": .5}
                theme_font_name: "Custom"
                font_name: 'Gotham-Rounded-Medium'
                theme_font_size: "Custom"
                font_size: 40
                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex('#8214EB')

        Label:
            text: ''
            id: id_horario
            font_name: 'Gotham-Rounded-Medium'
            font_size: 30
            bold: True
            pos_hint: {"right": 0.2, "top":0.2}
            size_hint: 0.2, 0.2
            markup: True

        Label:
            text: ''
            id: id_dia
            font_name: 'Gotham-Rounded-Medium'
            font_size: 25
            markup: True
            pos_hint: {'right':0.2,'top':1}
            size_hint: 0.2, 0.15

        Label:
            text:'Sem conexao'
            id: id_conexao
            font_name: 'Gotham-Rounded-Medium'
            font_size: 12
            color: utils.get_color_from_hex('#ff0000')
            markup: True
            pos_hint: {'right':0.1, 'top':0.1}
            size_hint: 0.1, 0.1

        MDIconButton:
            id: id_enviar
            icon: "file-upload"
            pos_hint: {"right": 1, "top": 1}
            user_font_size: "64sp"
            theme_text_color: "Custom"
            disabled: True
            text_color: utils.get_color_from_hex('#FFFFFF')
            on_release:
                app.enviar_controles()